<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/setting">

        <SwitchPreference
            android:defaultValue="true"
            android:key="open"
            android:title="@string/pref_open" />

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="open"
            android:key="amount"
            android:title="@string/pref_amount" />

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="open"
            android:key="password"
            android:title="@string/pref_password" />

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="password"
            android:key="send_password"
            android:title="@string/pref_send_password" />

		<SwitchPreference
            android:defaultValue="false"
            android:dependency="open"
            android:key="reply"
            android:title="@string/pref_reply" />
		
        <EditTextPreference
            android:dependency="reply"
            android:key="reply1"
            android:title="@string/pref_reply1" />
		
		<SwitchPreference
            android:defaultValue="false"
            android:dependency="open"
            android:key="reply2"
            android:title="@string/pref_reply2" />
		
		<EditTextPreference
            android:dependency="reply2"
            android:key="reply3"
            android:title="@string/pref_reply3" />
		
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="open"
            android:key="delay"
            android:title="@string/pref_delay" />

        <me.veryyoung.qq.luckymoney.SeekBarPreference
            pref_kind="delay_time"
            android:defaultValue="true"
            android:dependency="delay"
            android:layout="@layout/preference_checkbox"
            android:title="@string/pref_delay_time" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about">
        <Preference
            android:key="author"
            android:summary="veryyoung"
            android:title="作者">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/veryyoung" />
        </Preference>
        <Preference
            android:key="donate_alipay"
            android:title="支付宝捐赠" />
        <Preference
            android:key="donate_wechat"
            android:title="微信捐赠" />
    </PreferenceCategory>

</PreferenceScreen>
